---
import PageLayout from "../../layouts/PageLayout.astro";
import { services } from "../../data/services";
---

<PageLayout
  title="Our Services"
  description="Tailored cleaning and maintenance solutions for industrial manufacturing facilities across Southern New Hampshire. Commercial cleaning, facility cleanouts, carpet cleaning, and floor care."
>
  <div class="min-h-screen bg-background" data-testid="page-services">
    <section class="relative min-h-[400px] flex items-center" data-testid="section-services-hero">
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('/images/hero.png');" />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900/80 via-slate-900/60 to-slate-900/40" />
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 py-20 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4" data-testid="text-services-hero-title">Our Services</h1>
        <p class="text-xl text-slate-300 max-w-2xl mx-auto">
          Tailored cleaning and maintenance solutions for industrial manufacturing facilities. We listen first, then deliver.
        </p>
      </div>
    </section>

    <section class="py-16 lg:py-24 bg-white" data-testid="section-services-list">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-6">
          {services.map((service) => (
            <a href={`/services/${service.id}`} class="block">
              <div class="overflow-hidden rounded-lg border border-slate-200 hover-elevate cursor-pointer h-full shadow-sm" data-testid={`card-service-${service.id}`}>
                <div class="relative h-48">
                  <img src={`/images/services/${service.id}.png`} alt={service.title} class="w-full h-full object-cover" />
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent" />
                  <div class="absolute bottom-4 left-4">
                    <div class="w-12 h-12 rounded-lg bg-sky-600 flex items-center justify-center">
                      {service.icon === "Warehouse" && <span class="icon-[ph--warehouse] w-6 h-6 text-white inline-block"></span>}
                      {service.icon === "Package" && <span class="icon-[ph--package] w-6 h-6 text-white inline-block"></span>}
                      {service.icon === "Sparkles" && <span class="icon-[ph--sparkle] w-6 h-6 text-white inline-block"></span>}
                      {service.icon === "Layers" && <span class="icon-[ph--stack] w-6 h-6 text-white inline-block"></span>}
                    </div>
                  </div>
                </div>
                <div class="p-6">
                  <h2 class="text-xl font-bold text-slate-900 mb-2">{service.title}</h2>
                  <p class="text-slate-600 text-sm leading-relaxed">{service.shortDesc}</p>
                  <div class="mt-4 flex items-center gap-1.5 text-sky-600 font-medium text-sm">Learn more <span class="icon-[ph--arrow-right] w-4 h-4 inline-block"></span></div>
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="mt-16 text-center bg-slate-900 rounded-xl p-10">
          <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4">Need a Custom Solution?</h2>
          <p class="text-slate-300 mb-6 max-w-2xl mx-auto">
            Every facility is unique. Contact us to discuss your specific requirements and we'll create a tailored maintenance plan just for you.
          </p>
          <a href="/quote">
            <button class="inline-flex items-center justify-center gap-2 rounded-md px-6 py-3 text-base font-medium bg-green-600 text-white hover:bg-green-700" data-testid="button-services-quote">
              Request a Consultation <span class="icon-[ph--arrow-right] w-5 h-5 inline-block"></span>
            </button>
          </a>
        </div>
      </div>
    </section>
  </div>
</PageLayout>
