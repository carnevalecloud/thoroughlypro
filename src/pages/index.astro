---
import PageLayout from "../layouts/PageLayout.astro";
import { siteInfo } from "../data/siteInfo";
import { services } from "../data/services";
---

<PageLayout title={siteInfo.meta.defaultTitle} description={siteInfo.meta.defaultDescription}>
  <div class="min-h-screen bg-background" data-testid="page-home">
    <!-- Hero -->
    <section class="relative py-32" data-testid="section-hero">
      <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat"
        style="background-image: url('/images/hero.png'); transform: scaleX(-1);"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900/95 via-slate-900/70 to-transparent" />
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
        <div class="max-w-3xl">
          <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-white/10 backdrop-blur-sm rounded-full text-sm text-white/90 border border-white/20 mb-6">
            <span class="icon-[ph--headphones] w-4 h-4 inline-block align-middle"></span> We Listen First
          </span>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6" data-testid="text-hero-headline">
            Your Trusted Facility Partner Since 1983
          </h1>
          <p class="text-lg lg:text-xl text-slate-300 leading-relaxed mb-8" data-testid="text-hero-subheadline">
            We listen to your challenges, then deliver tailored cleaning and maintenance solutions for industrial manufacturing facilities across Southern New Hampshire.
          </p>
          <div class="flex flex-col sm:flex-row items-start gap-4">
            <a href={siteInfo.contact.phoneUrl}>
              <button class="inline-flex items-center justify-center gap-2 rounded-md px-6 py-3 text-base font-medium bg-green-600 text-white hover:bg-green-700 transition-colors" data-testid="button-hero-call">
                <span class="icon-[ph--phone] w-5 h-5 inline-block"></span> Call {siteInfo.contact.phone}
              </button>
            </a>
            <a href="/quote">
              <button class="inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium border-2 border-white/30 text-white bg-white/10 hover:bg-white/20 transition-colors" data-testid="button-hero-walkthrough">
                Request Walk-Through
              </button>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Bar -->
    <section class="bg-slate-100 border-y border-slate-200" data-testid="section-trust-bar">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 py-8">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
          <div class="flex items-center gap-4" data-testid="trust-stat-0">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-sky-100 flex items-center justify-center"><span class="icon-[ph--clock] w-6 h-6 text-sky-600 inline-block"></span></div>
            <div>
              <p class="font-semibold text-slate-900">Since 1983</p>
              <p class="text-sm text-slate-500">40+ Years Experience</p>
            </div>
          </div>
          <div class="flex items-center gap-4" data-testid="trust-stat-1">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-sky-100 flex items-center justify-center"><span class="icon-[ph--headphones] w-6 h-6 text-sky-600 inline-block"></span></div>
            <div>
              <p class="font-semibold text-slate-900">We Listen First</p>
              <p class="text-sm text-slate-500">Tailored Solutions</p>
            </div>
          </div>
          <div class="flex items-center gap-4" data-testid="trust-stat-2">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-sky-100 flex items-center justify-center"><span class="icon-[ph--shield] w-6 h-6 text-sky-600 inline-block"></span></div>
            <div>
              <p class="font-semibold text-slate-900">Licensed & Insured</p>
              <p class="text-sm text-slate-500">Full Coverage</p>
            </div>
          </div>
          <div class="flex items-center gap-4" data-testid="trust-stat-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-sky-100 flex items-center justify-center"><span class="icon-[ph--map-pin] w-6 h-6 text-sky-600 inline-block"></span></div>
            <div>
              <p class="font-semibold text-slate-900">Southern NH</p>
              <p class="text-sm text-slate-500">7 Communities Served</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Preview -->
    <section class="py-16 lg:py-24 bg-white" data-testid="section-services-preview">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12 lg:mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-4" data-testid="text-services-title">Our Core Services</h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Tailored cleaning and maintenance solutions for industrial manufacturing facilities across Southern New Hampshire.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
          {services.slice(0, 3).map((service) => (
            <a href={`/services/${service.id}`} class="block">
              <div class="overflow-hidden bg-white shadow-lg rounded-lg hover-elevate flex flex-col h-full cursor-pointer" data-testid={`card-service-${service.id}`}>
                <div class="relative aspect-video w-full overflow-hidden">
                  <img src={`/images/services/${service.id}.png`} alt={service.title} class="w-full h-full object-cover" />
                  <div class="absolute top-4 left-4 w-12 h-12 rounded-lg bg-white/90 backdrop-blur-sm flex items-center justify-center shadow-md">
                    {service.icon === "Warehouse" && <span class="icon-[ph--warehouse] w-6 h-6 text-sky-600 inline-block"></span>}
                    {service.icon === "Package" && <span class="icon-[ph--package] w-6 h-6 text-sky-600 inline-block"></span>}
                    {service.icon === "Sparkles" && <span class="icon-[ph--sparkle] w-6 h-6 text-sky-600 inline-block"></span>}
                    {service.icon === "Layers" && <span class="icon-[ph--stack] w-6 h-6 text-sky-600 inline-block"></span>}
                  </div>
                </div>
                <div class="p-8 flex-1 flex flex-col">
                  <h3 class="text-xl font-semibold text-slate-900 mb-3">{service.title}</h3>
                  <p class="text-slate-600 mb-6 leading-relaxed">{service.shortDesc}</p>
                  <span class="mt-auto flex items-center gap-1.5 text-sky-600 font-semibold text-sm">Learn more <span class="icon-[ph--arrow-right] w-4 h-4 inline-block"></span></span>
                </div>
              </div>
            </a>
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/services">
            <button class="inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium bg-sky-600 text-white hover:bg-sky-700 shadow-lg" data-testid="button-view-all-services">
              View All Services
            </button>
          </a>
        </div>
      </div>
    </section>

    <!-- Regional Map -->
    <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900" data-testid="section-regional-map">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div>
            <div class="flex items-center gap-2 text-sky-400 mb-4">
              <span class="icon-[ph--map-pin] w-5 h-5 inline-block"></span>
              <span class="text-sm font-medium uppercase tracking-wide">Southern New Hampshire</span>
            </div>
            <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4" data-testid="text-regions-title">Serving Industrial Facilities Across 7 Communities</h2>
            <p class="text-lg text-slate-300 mb-8">
              We maintain manufacturing facilities throughout Southern New Hampshire with consistent, reliable daily service.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a href={siteInfo.contact.phoneUrl}>
                <button class="inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium bg-green-600 text-white hover:bg-green-700 w-full sm:w-auto" data-testid="button-areas-call">
                  <span class="icon-[ph--phone] w-5 h-5 inline-block"></span> {siteInfo.contact.phone}
                </button>
              </a>
              <a href="/areas">
                <button class="inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium border border-white/30 text-white bg-white/5 hover:bg-white/10 w-full sm:w-auto" data-testid="button-view-all-areas">
                  View All Service Areas
                </button>
              </a>
            </div>
          </div>
          <div>
            <div class="grid grid-cols-3 gap-4 mb-4">
              {["Chesterfield", "Keene", "Concord"].map((town) => (
                <div class="p-5 rounded-xl bg-white/10 border border-sky-500/30 hover:bg-white/15 transition-colors text-center">
                  <div class="w-12 h-12 rounded-lg bg-sky-500/30 flex items-center justify-center mx-auto mb-3">
                    <span class="icon-[ph--factory] w-6 h-6 text-sky-400 inline-block"></span>
                  </div>
                  <p class="font-bold text-white text-lg">{town}</p>
                  <p class="text-xs text-slate-400">NH</p>
                </div>
              ))}
            </div>
            <div class="grid grid-cols-4 gap-3">
              {["Swanzey", "Lebanon", "Newport", "New London"].map((town) => (
                <div class="p-3 rounded-lg bg-white/5 border border-white/10 hover:bg-white/10 hover:border-white/20 transition-colors text-center">
                  <p class="font-medium text-white text-sm">{town}</p>
                  <p class="text-xs text-slate-500">NH</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 lg:py-24 bg-white" data-testid="section-why-choose-us">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-slate-900 mb-6" data-testid="text-why-title">Why Facility Managers Choose Thoroughly Pro</h2>
            <p class="text-lg text-slate-600 mb-10">
              We understand that you're the expert on your facility's challenges. That's why we listen first, then bring our experience to deliver solutions that actually work.
            </p>
            <div class="space-y-6">
              {[
                { n: "01", t: "We Listen First", d: "Every facility has unique challenges. We start by listening to understand your specific needs before proposing solutions." },
                { n: "02", t: "Tailored Solutions", d: "No cookie-cutter approaches. We develop customized cleaning programs based on your facility's requirements." },
                { n: "03", t: "Responsive & Reliable", d: "Quick response times and consistent service you can count on. Your operations depend on it." },
                { n: "04", t: "Collaborative Partnership", d: "We work hand-in-hand with your team, treating every client relationship as a long-term partnership." },
                { n: "05", t: "40+ Years Experience", d: "Since 1983, we've built deep expertise in maintaining industrial manufacturing facilities across Southern New Hampshire." },
              ].map((item) => (
                <div class="flex gap-4" data-testid={`differentiator-${item.n}`}>
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-sky-100 flex items-center justify-center">
                    <span class="text-sm font-bold text-sky-600">{item.n}</span>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 mb-1">{item.t}</h3>
                    <p class="text-slate-600 text-sm leading-relaxed">{item.d}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="aspect-[4/3] rounded-lg overflow-hidden shadow-2xl">
              <img src="/images/hero.png" alt="Clean industrial facility" class="w-full h-full object-cover" data-testid="img-why-choose" />
            </div>
            <div class="absolute -bottom-6 -left-6 bg-green-600 text-white p-6 rounded-lg shadow-xl max-w-xs">
              <div class="flex items-center gap-2 mb-2">
                <span class="icon-[ph--check-circle] w-5 h-5 text-white inline-block"></span>
                <span class="font-semibold">Trusted Partner</span>
              </div>
              <p class="text-sm text-green-100">Professional, collaborative, respectful, and thorough.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-slate-900" data-testid="section-cta">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center max-w-2xl mx-auto">
          <h2 class="text-2xl lg:text-3xl font-bold text-white mb-4" data-testid="text-cta-title">Ready to Transform Your Facility?</h2>
          <p class="text-slate-300 mb-8">
            Let's discuss how Thoroughly Pro can help maintain your facility at the highest standards. Give us a call to schedule a walk-through.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={siteInfo.contact.phoneUrl}>
              <button class="inline-flex items-center justify-center gap-2 rounded-md px-6 py-3 text-base font-medium bg-green-600 text-white hover:bg-green-700" data-testid="button-cta-call">
                <span class="icon-[ph--phone] w-5 h-5 inline-block"></span> Call {siteInfo.contact.phone}
              </button>
            </a>
            <a href="/quote">
              <button class="inline-flex items-center justify-center gap-2 rounded-md px-6 py-3 text-base font-medium border border-white/30 text-white bg-white/10 hover:bg-white/20" data-testid="button-cta-quote">
                Request a Consultation <span class="icon-[ph--arrow-right] w-5 h-5 inline-block"></span>
              </button>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</PageLayout>
